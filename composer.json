{
  "name": "deep-web-solutions/wp-framework-core",
  "type": "library",

  "description": "A set of related classes to kick start WordPress development.",
  "keywords": ["wordpress", "framework", "Deep Web Solutions", "core"],
  "homepage": "https://www.deep-web-solutions.de",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Antonius Hegyes",
      "email": "a.hegyes@deep-web-solutions.de",
      "homepage": "https://www.linkedin.com/in/tonyhegyes",
      "role": "Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/deep-web-solutions/wordpress-framework-core/graphs/contributors"
    }
  ],

  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/deep-web-solutions/wordpress-framework-bootstrapper"
    },
    {
      "type": "vcs",
      "url": "https://github.com/deep-web-solutions/wordpress-framework-helpers"
    },
    {
      "type": "vcs",
      "url": "https://github.com/deep-web-solutions/wordpress-framework-utilities"
    }
  ],
  "require": {
    "deep-web-solutions/wp-framework-bootstrapper": "master@dev",
    "deep-web-solutions/wp-framework-helpers": "master@dev",
    "deep-web-solutions/wp-framework-utilities": "master@dev"
  },
  "require-dev": {
    "php-di/php-di": "~6.1.0",

    "phpmd/phpmd": "*",
    "squizlabs/php_codesniffer": "^3.5",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "object-calisthenics/phpcs-calisthenics-rules": "*",
    "phpcompatibility/php-compatibility": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "wp-coding-standards/wpcs": "*",
    "sllh/composer-versions-check": "*",

    "lucatume/wp-browser": "^2.4",
    "codeception/module-asserts": "^1.0",
    "codeception/module-phpbrowser": "^1.0",
    "codeception/module-webdriver": "^1.0",
    "codeception/module-db": "^1.0",
    "codeception/module-filesystem": "^1.0",
    "codeception/module-cli": "^1.0",
    "codeception/util-universalframework": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "DeepWebSolutions\\Framework\\Core\\": "src/includes"
    },
    "files": [
      "bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "": "tests/_support"
    }
  },

  "config": {
    "sllh-composer-versions-check": {
      "show-links": true
    }
  }
}
