{
  "name": "deep-web-solutions-gmbh/wordpress-framework",
  "type": "library",

  "description": "A set of related classes and helpers to kick start WordPress plugin development.",
  "keywords": ["wordpress", "framework", "Deep Web Solutions"],
  "homepage": "https://www.deep-web-solutions.de",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Antonius Hegyes",
      "email": "a.hegyes@deep-web-solutions.de",
      "homepage": "https://www.linkedin.com/in/tonyhegyes",
      "role": "Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/Deep-Web-Solutions-GmbH/wordpress-framework/graphs/contributors"
